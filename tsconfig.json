{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"declaration": false,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"target": "es6",
		"outDir": "build/cloud",
		"resolveJsonModule": true,
		"paths": {
			"@app/env": [
				"src/env/env"
			],
			"@lib/*": [
				"src/lib/*"
			],
			"@modules/*": [
				"src/modules/*"
      ],
      "@spec/*": [
        "spec/*"
      ]
		}
	},
	"include": [
    "src/**/*"
	],
	"exclude": [
		"node_modules",
	],
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
