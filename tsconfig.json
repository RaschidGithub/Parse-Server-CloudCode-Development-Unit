{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "typeRoots": ["types"],
    "types": [
      "@types/parse",
      "@types/node"
    ],
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"target": "es6",
		"outDir": "build/cloud",
		"resolveJsonModule": true,
		"paths": {
			"@app/env": [
				"env/env"
			],
			"@lib/*": [
				"lib/*"
			],
			"@modules/*": [
				"modules/*"
			],
			"@parse": [
				"parse.server"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.ts",
		"src/**/__tests__/*.ts"
	],
	"compileOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	}
}
