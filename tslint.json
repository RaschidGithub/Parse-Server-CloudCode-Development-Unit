{
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "align": [
      true,
      "statements"
    ],
    "array-type": [
      true,
      "array"
    ],
    "deprecation": {
      "severity": "warn"
    },
    "import-blacklist": [
      true,
      "parse"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": {
      "severity": "warning",
      "options": [
        140
      ]
    },
    "member-ordering": {
      "severity": "warning",
      "options": {
        "order": "instance-sandwich",
        "alphabetize": true
      }
    },
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": {
      "severity": "warning",
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-snake-case",
        "allow-pascal-case"
      ]
    }
  }
}
