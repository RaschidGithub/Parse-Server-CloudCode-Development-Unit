{
  "spec_dir": "spec",
  "spec_files": [
    "**/*.spec.ts"
  ],
  "helpers": [
    "helpers/**/*.ts"
  ],
  "stopSpecOnExpectationFailure": false,
  "random": true,
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "spec": {
          "displayStacktrace": "none",
          "displayErrorMessages": false
        },
        "summary": {
          "displayStacktrace": "pretty",
          "displayDuration": true
        }
      }
    }
  ]
}
